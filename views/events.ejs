<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/navbar.css">
  <link rel="stylesheet" href="/browse.css">
  
</head>
<body>

<%- include("partials/navbar") %>

  <h1 class="heading">Upcoming Events</h1>

  <div class="main-container">
    <div class="events-container">
      <% events.forEach(event => { %>
        <div class="event-card" style="background-image: url('<%= event.image %>')">
          <div class="event-details">
            <h2><%= event.eventName %></h2>
            <p class="short-desc"><%= event.shortDesc %></p>
            <div class="club-date">
              <span><%= event.club %></span>
              <span class="date-badge"><%= event.date %></span>
              <a href="/events/<%= event._id %>">
              <button class="register-btn">Know More</button>
              </a>
            </div>
          </div>
          <div class="event-actions">
            <div class="registered-count"><%= event.registered %>/<%= event.capacity %></div>
            <form action="/events/<%= event._id %>/register" method="POST">
              <button
                class="register-btn"
                type="submit"
                <% if (registeredEvents && registeredEvents.includes(event._id.toString())) { %> disabled <% } %>>
                <%= registeredEvents && registeredEvents.includes(event._id.toString()) ? "Registered" : "Register" %>
              </button>
            </form>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script>
  </script>

</body>
</html>